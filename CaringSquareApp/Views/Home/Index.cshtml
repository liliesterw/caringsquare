            if (idx % 2 == 0) {
                document.getElementById("hero").style.backgroundImage = "url('/img/homepage_explore.png')";
            }
            if (idx % 2 == 1) {
                document.getElementById("hero").style.backgroundImage = "url('/img/home_facts.png')";
            }
            idx = idx + 1;

        });

