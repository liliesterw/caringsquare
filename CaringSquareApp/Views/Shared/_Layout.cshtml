<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Caring Square</title>

    @Styles.Render("~/Content/bootstrap.min.css")

    @Styles.Render("~/Content/icofont.min.css")
    @Styles.Render("~/Content/boxicons.min.css")
    @Styles.Render("~/fonts/remixicon.css")
    @Styles.Render("~/Content/venobox.css")
    @Styles.Render("~/Content/aos.css")
    @Styles.Render("~/Content/owl.carousel.min.css")
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/jquery.dataTables.min.css")
    @Styles.Render("~/Content/themes/base/jquery-ui.min.css")

    @Styles.Render("~/Content/NewStyleSheet.css")




    @* This is for the mapbox map. *@

    <!-- <script src='https://api.mapbox.com/mapbox-gl-js/v0.47.0/mapbox-gl.js'></script>
     <link href='https://api.mapbox.com/mapbox-gl-js/v0.47.0/mapbox-gl.css' rel='stylesheet' /> -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v1.10.0/mapbox-gl.js"></script>
    <link href="https://api.mapbox.com/mapbox-gl-js/v1.10.0/mapbox-gl.css" rel="stylesheet" />
    @*This is used for the Geocoding Mapbox API*@
    <script src='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v2.2.0/mapbox-gl-geocoder.min.js'></script>
    <link rel='stylesheet' href='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v2.2.0/mapbox-gl-geocoder.css' type='text/css' />
    <!-- Google Fonts -->

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.10.0/jquery.timepicker.css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.10.0/jquery.timepicker.min.css.map" />
</head>
<body style="padding-top: 0px;
        padding-bottom: 0px;">
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center"
            style="background-color:#31943b">

        <br />
        <div class="container d-flex align-items-center">
            <div class="logo mr-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <h1 class="text-light">
                        <a href="/Home/Dashboard">
                            <span><img style="height: 28px; width: 30px; border-radius: 30%;margin-right:5px;" src="~/img/CaringSquareLogo.png" />CaringSquare</span>
                        </a>
                    </h1>
                }
                else
                {

                    <h1 class="text-light">
                        <a href="/Home">
                            <img style="height: 40px; width: 45px; border-radius: 30%;" src="~/img/CaringSquareLogo.png" />
                            <span>CaringSquare</span>
                        </a>
                    </h1>
                }
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>
                    }

                    <li>@Html.ActionLink("Knowledge Hub", "About", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Places List", "Index", "POIs")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Places List", "Index", "POIs")</li>
                    }


                    @if (User.Identity.IsAuthenticated)
                    {

                        <li>@Html.ActionLink("Events List", "Index", "SocialEvents")</li>
                    }
                    @Html.Partial("_LoginPartial")
                </ul>

            </nav><!-- .nav-menu -->

        </div>
    </header><!-- End Header -->

    <div>
        @RenderBody()
        <hr />
        <!-- ======= Footer ======= -->
        <footer id="footer">
            <div class="container">
                <div class="copyright">
                    &copy; @DateTime.Now.Year - Caring Square
                </div>

            </div>

        </footer><!-- End Footer -->
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery-3.5.0.js")
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Scripts.Render("~/Scripts/dataTables.bootstrap4.min.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.12.1.min.js")

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/bootstrap.bundle.js")
    @Scripts.Render("~/Scripts/jquery.easing.min.js")


    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    @Scripts.Render("~/Scripts/caringsquare.js")
    @Scripts.Render("~/Scripts/venobox.min.js")
    @Scripts.Render("~/Scripts/jquery.waypoints.min.js")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.10.0/jquery.timepicker.min.js"></script>

    @Scripts.Render("~/Scripts/counterup.min.js")
    @Scripts.Render("~/Scripts/owl.carousel.min.js")
    @Scripts.Render("~/Scripts/aos.js")
    @Scripts.Render("~/Scripts/main.js")
    @RenderSection("scripts", required: false)
</body>
</html>
