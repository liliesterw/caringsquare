@model IEnumerable<CaringSquareApp.Models.SocialEvent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<div class="container">
    <h2 id="freshtitle">Your Social Events Page</h2>
    <hr />
    <p>
        <div class="text-center text-lg-left">
            <h5 style="font-weight:bold;margin-bottom:20px;">
                
            </h5>
            <a href="/SocialEvents/Create" class="btn" style="background-color: #94d16a;font-weight:bold;">Create New Social Event</a>
            <a href="/POIs" class="btn" style="color:#010483;background-color: #f7f7f7;border-color:#000000; margin-left:10px;font-weight:bold;">Explore Places</a>
        </div>
    </p>
    <div class="text-center text-lg-left">
        <h5 style="font-weight:bold;margin-bottom:10px;margin-top:40px;">
            View Your Personal Social Events:
        </h5>
    </div>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EventName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EventDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EventTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.POIs.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.POIs.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.EventId }, new { @style = "font-weight:bold;" }) |
                        @Html.ActionLink("Share Event", "Details", new { id = item.EventId }, new { @style = "font-weight:bold;" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EventId }, new { @style = "font-weight:bold;" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    window.onload = function () {
        $('#myTable').DataTable();
        $('#myTable tbody tr:even').css('background-color', '#94d16a');
    };

</script>

@section Scripts {
    @Scripts.Render("~/bundles/mapbox")
}